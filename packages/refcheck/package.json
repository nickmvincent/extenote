{
  "name": "@extenote/refcheck",
  "version": "0.1.0",
  "description": "Unified bibliographic metadata validation for Extenote",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsc -p tsconfig.build.json --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "test": "bun test"
  },
  "dependencies": {},
  "devDependencies": {
    "typescript": "^5.3.0"
  },
  "keywords": [
    "extenote",
    "bibliographic",
    "validation",
    "dblp",
    "semantic-scholar",
    "openalex",
    "crossref"
  ],
  "author": "Nick Vincent",
  "license": "MIT"
}
